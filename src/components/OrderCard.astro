---
import type { Order } from '../lib/db';
import { format } from 'date-fns';
import { sk } from 'date-fns/locale';

interface Props {
  order: Order;
  index: number;
}

const { order, index } = Astro.props;

const statusLabels: Record<string, string> = {
  DRAFT: 'Koncept',
  CONFIRMED: 'Potvrden√©',
  IN_PROGRESS: 'Prebieha',
  COMPLETED: 'Dokonƒçen√©',
  CANCELLED: 'Zru≈°en√©',
};

const statusClasses: Record<string, string> = {
  DRAFT: 'status-draft',
  CONFIRMED: 'status-confirmed',
  IN_PROGRESS: 'status-in-progress',
  COMPLETED: 'status-completed',
  CANCELLED: 'status-cancelled',
};

const priorityColors: Record<string, string> = {
  low: 'border-l-[#6b7280]',
  medium: 'border-l-[#3b82f6]',
  high: 'border-l-[#f59e0b]',
  critical: 'border-l-[#ef4444]',
};

const statusIcons: Record<string, string> = {
  DRAFT: 'üìù',
  CONFIRMED: '‚úÖ',
  IN_PROGRESS: 'üîÑ',
  COMPLETED: 'üéâ',
  CANCELLED: '‚ùå',
};

function formatDate(date: Date | null): string {
  if (!date) return '‚Äî';
  try {
    const d = typeof date === 'number' ? new Date(date) : new Date(date);
    return format(d, 'd. MMM yyyy', { locale: sk });
  } catch {
    return '‚Äî';
  }
}

// Calculate progress percentage based on status
function getProgress(status: string): number {
  switch (status) {
    case 'DRAFT': return 10;
    case 'CONFIRMED': return 30;
    case 'IN_PROGRESS': return 60;
    case 'COMPLETED': return 100;
    case 'CANCELLED': return 0;
    default: return 0;
  }
}

const progress = getProgress(order.status);
---

<a 
  href={`/order/${order.id}`}
  class={`order-card block adsun-card p-6 border-l-4 ${priorityColors[order.priority]} animate-fade-in-up`}
  style={`animation-delay: ${index * 0.05}s`}
  data-status={order.status}
>
  <div class="flex flex-col gap-4">
    <!-- Header row -->
    <div class="flex flex-col sm:flex-row sm:items-start justify-between gap-3">
      <!-- Order info -->
      <div class="flex-1 min-w-0">
        <div class="flex flex-wrap items-center gap-2 mb-2">
          <span class="font-mono text-sm text-[#f59e0b] font-medium">{order.orderNumber}</span>
          <span class={`px-2.5 py-1 rounded-md text-xs font-medium ${statusClasses[order.status]}`}>
            {statusLabels[order.status]}
          </span>
        </div>
        <h3 class="text-lg font-semibold text-white truncate mb-2">{order.name}</h3>
        <div class="flex flex-wrap items-center gap-4 text-sm text-[#9ca3af]">
          <span class="flex items-center gap-1.5">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            {formatDate(order.createdAt)}
          </span>
          {order.plannedEndDate && (
            <span class="flex items-center gap-1.5 text-[#f59e0b]">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
              Term√≠n: {formatDate(order.plannedEndDate)}
            </span>
          )}
        </div>
      </div>

      <!-- Arrow -->
      <div class="hidden sm:flex items-center self-center">
        <div class="w-10 h-10 rounded-full bg-[#1a1a1a] flex items-center justify-center group-hover:bg-[#f59e0b] transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#6b7280]">
            <polyline points="9 18 15 12 9 6"/>
          </svg>
        </div>
      </div>
    </div>
    
    <!-- Progress bar -->
    {order.status !== 'CANCELLED' && order.status !== 'DRAFT' && (
      <div>
        <div class="flex justify-between items-center mb-2">
          <span class="text-xs text-[#6b7280]">Priebeh</span>
          <span class="text-xs font-medium text-[#f59e0b]">{progress}%</span>
        </div>
        <div class="progress-bar">
          <div class="progress-bar-fill" style={`width: ${progress}%`}></div>
        </div>
      </div>
    )}
  </div>
</a>
