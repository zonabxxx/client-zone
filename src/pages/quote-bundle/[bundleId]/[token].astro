---
import Layout from '../../../layouts/Layout.astro';
import { getQuoteBundleByToken, getClient } from '../../../lib/db';
import { format } from 'date-fns';
import { sk } from 'date-fns/locale';

const { bundleId, token } = Astro.params;

if (!bundleId || !token) {
  return Astro.redirect('/not-found');
}

// Fetch bundle by token
const result = await getQuoteBundleByToken(bundleId, token);

if (!result) {
  return Astro.redirect('/not-found');
}

const { bundle, items, organization } = result;

// Fetch approval status for each item from calculation_shares
const db = getClient();
const itemStatuses: Record<string, { clientResponse: string | null }> = {};

for (const item of items) {
  if (item.shareUrl) {
    // Extract token from shareUrl: /quote/{id}/{token}
    const parts = item.shareUrl.split('/');
    const itemToken = parts[parts.length - 1];
    try {
      const shareResult = await db.execute({
        sql: `SELECT client_response FROM calculation_shares 
              WHERE calculation_id = ? AND token = ? LIMIT 1`,
        args: [item.id, itemToken]
      });
      if (shareResult.rows.length > 0) {
        itemStatuses[item.id] = {
          clientResponse: shareResult.rows[0].client_response as string | null
        };
      }
    } catch {
      // Table might not exist or query failed - ignore
    }
  }
}

// Check if expired
const isExpired = bundle.expiresAt && new Date(bundle.expiresAt) < new Date();

// Get VAT rate
const vatRate = organization?.vatRate ?? 20;

// Calculate totals
const totalAmount = items.reduce((sum, item) => sum + (item.totalPrice || 0), 0);
const vatAmount = totalAmount * (vatRate / 100);
const totalWithVat = totalAmount + vatAmount;

function formatCurrency(n: number): string {
  return new Intl.NumberFormat('sk-SK', { style: 'currency', currency: 'EUR' }).format(n || 0);
}

function formatDate(date: Date | string | null): string {
  if (!date) return '—';
  try {
    const d = new Date(date);
    return format(d, 'd. MMMM yyyy', { locale: sk });
  } catch {
    return '—';
  }
}

// Count approved/rejected items
const approvedCount = Object.values(itemStatuses).filter(s => s.clientResponse === 'approved').length;
const rejectedCount = Object.values(itemStatuses).filter(s => s.clientResponse === 'rejected').length;
const questionCount = Object.values(itemStatuses).filter(s => s.clientResponse === 'question').length;
const pendingCount = items.length - approvedCount - rejectedCount - questionCount;
const allApproved = approvedCount === items.length && items.length > 0;
const hasAnyResponse = approvedCount > 0 || rejectedCount > 0 || questionCount > 0;
---

<Layout title={`Cenové ponuky - ${bundle.name || 'Balík'}`}>
  <main class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
    <div class="max-w-2xl mx-auto px-5 py-10">
      
      {/* Header */}
      <div class="text-center mb-8">
        {organization && (
          <div class="text-sm text-slate-400 mb-2">{organization.name}</div>
        )}
        <h1 class="text-3xl font-bold text-white mb-2">{bundle.name || 'Balík cenových ponúk'}</h1>
        <p class="text-slate-400">
          {items.length} {items.length === 1 ? 'ponuka' : items.length < 5 ? 'ponuky' : 'ponúk'}
        </p>
        
        {/* Status Summary */}
        {hasAnyResponse && (
          <div class="mt-4 flex flex-wrap justify-center gap-3">
            {approvedCount > 0 && (
              <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium bg-emerald-500/20 text-emerald-400">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                {approvedCount} schválená{approvedCount > 1 && approvedCount < 5 ? 'é' : approvedCount >= 5 ? 'ých' : ''}
              </span>
            )}
            {rejectedCount > 0 && (
              <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium bg-red-500/20 text-red-400">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                {rejectedCount} zamietnutá{rejectedCount > 1 && rejectedCount < 5 ? 'é' : rejectedCount >= 5 ? 'ých' : ''}
              </span>
            )}
            {questionCount > 0 && (
              <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium bg-amber-500/20 text-amber-400">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
                {questionCount} s otázkou
              </span>
            )}
            {pendingCount > 0 && (
              <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium bg-slate-500/20 text-slate-400">
                {pendingCount} čaká na odpoveď
              </span>
            )}
          </div>
        )}
        
        {/* All Approved Banner */}
        {allApproved && (
          <div class="mt-4 inline-flex items-center gap-2 px-4 py-2 rounded-full bg-emerald-500/20 text-emerald-400 font-medium">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Všetky ponuky schválené!
          </div>
        )}
      </div>

      {/* Expired State */}
      {isExpired && (
        <div class="glass rounded-3xl p-8 text-center mb-6 animate-fade-in-up">
          <div class="w-16 h-16 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Ponuka expirovala</h3>
          <p class="text-slate-400">Kontaktujte nás pre aktuálnu ponuku.</p>
        </div>
      )}

      {!isExpired && (
        <>
          {/* Items List */}
          <div class="space-y-4 mb-6">
            {items.map((item, idx) => {
              const status = itemStatuses[item.id];
              const isApproved = status?.clientResponse === 'approved';
              const isRejected = status?.clientResponse === 'rejected';
              const hasQuestion = status?.clientResponse === 'question';
              
              return (
                <a 
                  href={`${item.shareUrl}?bundleUrl=${encodeURIComponent(`/quote-bundle/${bundleId}/${token}`)}`}
                  class={`block glass rounded-2xl p-5 hover:bg-white/5 transition-all animate-fade-in-up relative ${isApproved ? 'ring-2 ring-emerald-500/50' : ''} ${isRejected ? 'ring-2 ring-red-500/50 opacity-60' : ''}`}
                  style={`animation-delay: ${idx * 50}ms`}
                >
                  {/* Status Badge */}
                  {status?.clientResponse && (
                    <div class={`absolute top-3 right-3 px-2 py-1 rounded-full text-xs font-medium flex items-center gap-1 ${
                      isApproved ? 'bg-emerald-500/20 text-emerald-400' : 
                      isRejected ? 'bg-red-500/20 text-red-400' : 
                      'bg-amber-500/20 text-amber-400'
                    }`}>
                      {isApproved && '✓ Schválená'}
                      {isRejected && '✗ Zamietnutá'}
                      {hasQuestion && '? Otázka'}
                    </div>
                  )}
                  
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-4">
                      <span class={`w-10 h-10 rounded-xl flex items-center justify-center ${
                        isApproved ? 'bg-emerald-500/30' : 
                        isRejected ? 'bg-red-500/20' : 
                        'bg-emerald-500/20'
                      }`}>
                        {isApproved ? (
                          <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                          </svg>
                        ) : isRejected ? (
                          <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                          </svg>
                        ) : (
                          <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z" />
                            <path fill-rule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8z" clip-rule="evenodd" />
                          </svg>
                        )}
                      </span>
                      <div>
                        <h3 class={`font-semibold ${isRejected ? 'text-slate-400 line-through' : 'text-white'}`}>{item.name}</h3>
                        {item.description && (
                          <p class="text-sm text-slate-400 line-clamp-1">{item.description}</p>
                        )}
                      </div>
                    </div>
                    <div class="flex items-center gap-4">
                      <div class="text-right">
                        <div class={`text-lg font-bold ${isApproved ? 'text-emerald-400' : isRejected ? 'text-slate-500 line-through' : 'text-emerald-400'}`}>{formatCurrency(item.totalPrice || 0)}</div>
                        <div class="text-xs text-slate-500">bez DPH</div>
                      </div>
                      <svg class="w-5 h-5 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                  </div>
                </a>
              );
            })}
          </div>

          {/* Total Card */}
          <div class="glass rounded-3xl overflow-hidden animate-fade-in-up">
            <div class="p-6 bg-gradient-to-br from-emerald-500/10 to-blue-500/10">
              <div class="space-y-2 mb-4">
                <div class="flex justify-between py-1">
                  <span class="text-slate-400">Medzisúčet bez DPH</span>
                  <span class="text-white">{formatCurrency(totalAmount)}</span>
                </div>
                <div class="flex justify-between py-1">
                  <span class="text-slate-400">DPH {vatRate}%</span>
                  <span class="text-white">{formatCurrency(vatAmount)}</span>
                </div>
              </div>
              
              <div class="flex justify-between py-4 border-t border-slate-700">
                <span class="font-bold text-white text-xl">Celkom s DPH</span>
                <span class="font-bold text-emerald-400 text-2xl">{formatCurrency(totalWithVat)}</span>
              </div>
            </div>

            {/* Validity */}
            {bundle.expiresAt && (
              <div class="px-6 py-3 bg-amber-500/10 border-t border-amber-500/30 text-center">
                <span class="text-amber-400 text-sm">
                  ⏰ Ponuka platí do <strong>{formatDate(bundle.expiresAt)}</strong>
                </span>
              </div>
            )}
          </div>

          {/* Company Footer */}
          {organization && (
            <div class="mt-8 text-center text-sm text-slate-500">
              <div class="font-medium text-slate-400">{organization.name}</div>
              {organization.address && <div>{organization.address}</div>}
              <div class="flex flex-wrap justify-center gap-x-4 gap-y-1 mt-1">
                {organization.ico && <span>IČO: {organization.ico}</span>}
                {organization.email && <span>{organization.email}</span>}
                {organization.phone && <span>{organization.phone}</span>}
              </div>
            </div>
          )}
        </>
      )}
    </div>
  </main>
</Layout>
