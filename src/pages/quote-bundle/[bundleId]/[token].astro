---
import Layout from '../../../layouts/Layout.astro';
import { getQuoteBundleByToken } from '../../../lib/db';
import { format } from 'date-fns';
import { sk } from 'date-fns/locale';

const { bundleId, token } = Astro.params;

if (!bundleId || !token) {
  return Astro.redirect('/not-found');
}

// Fetch bundle by token
const result = await getQuoteBundleByToken(bundleId, token);

if (!result) {
  return Astro.redirect('/not-found');
}

const { bundle, items, organization } = result;

// Check if expired
const isExpired = bundle.expiresAt && new Date(bundle.expiresAt) < new Date();

// Get VAT rate
const vatRate = organization?.vatRate ?? 20;

// Calculate totals
const totalAmount = items.reduce((sum, item) => sum + (item.totalPrice || 0), 0);
const vatAmount = totalAmount * (vatRate / 100);
const totalWithVat = totalAmount + vatAmount;

function formatCurrency(n: number): string {
  return new Intl.NumberFormat('sk-SK', { style: 'currency', currency: 'EUR' }).format(n || 0);
}

function formatDate(date: Date | string | null): string {
  if (!date) return '—';
  try {
    const d = new Date(date);
    return format(d, 'd. MMMM yyyy', { locale: sk });
  } catch {
    return '—';
  }
}
---

<Layout title={`Cenové ponuky - ${bundle.name || 'Balík'}`}>
  <main class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
    <div class="max-w-2xl mx-auto px-5 py-10">
      
      {/* Header */}
      <div class="text-center mb-8">
        {organization && (
          <div class="text-sm text-slate-400 mb-2">{organization.name}</div>
        )}
        <h1 class="text-3xl font-bold text-white mb-2">{bundle.name || 'Balík cenových ponúk'}</h1>
        <p class="text-slate-400">
          {items.length} {items.length === 1 ? 'ponuka' : items.length < 5 ? 'ponuky' : 'ponúk'}
        </p>
      </div>

      {/* Expired State */}
      {isExpired && (
        <div class="glass rounded-3xl p-8 text-center mb-6 animate-fade-in-up">
          <div class="w-16 h-16 bg-red-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Ponuka expirovala</h3>
          <p class="text-slate-400">Kontaktujte nás pre aktuálnu ponuku.</p>
        </div>
      )}

      {!isExpired && (
        <>
          {/* Items List */}
          <div class="space-y-4 mb-6">
            {items.map((item, idx) => (
              <a 
                href={item.shareUrl}
                class="block glass rounded-2xl p-5 hover:bg-white/5 transition-all animate-fade-in-up"
                style={`animation-delay: ${idx * 50}ms`}
              >
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-4">
                    <span class="w-10 h-10 bg-emerald-500/20 rounded-xl flex items-center justify-center">
                      <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z" />
                        <path fill-rule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8z" clip-rule="evenodd" />
                      </svg>
                    </span>
                    <div>
                      <h3 class="font-semibold text-white">{item.name}</h3>
                      {item.description && (
                        <p class="text-sm text-slate-400 line-clamp-1">{item.description}</p>
                      )}
                    </div>
                  </div>
                  <div class="flex items-center gap-4">
                    <div class="text-right">
                      <div class="text-lg font-bold text-emerald-400">{formatCurrency(item.totalPrice || 0)}</div>
                      <div class="text-xs text-slate-500">bez DPH</div>
                    </div>
                    <svg class="w-5 h-5 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              </a>
            ))}
          </div>

          {/* Total Card */}
          <div class="glass rounded-3xl overflow-hidden animate-fade-in-up">
            <div class="p-6 bg-gradient-to-br from-emerald-500/10 to-blue-500/10">
              <div class="space-y-2 mb-4">
                <div class="flex justify-between py-1">
                  <span class="text-slate-400">Medzisúčet bez DPH</span>
                  <span class="text-white">{formatCurrency(totalAmount)}</span>
                </div>
                <div class="flex justify-between py-1">
                  <span class="text-slate-400">DPH {vatRate}%</span>
                  <span class="text-white">{formatCurrency(vatAmount)}</span>
                </div>
              </div>
              
              <div class="flex justify-between py-4 border-t border-slate-700">
                <span class="font-bold text-white text-xl">Celkom s DPH</span>
                <span class="font-bold text-emerald-400 text-2xl">{formatCurrency(totalWithVat)}</span>
              </div>
            </div>

            {/* Validity */}
            {bundle.expiresAt && (
              <div class="px-6 py-3 bg-amber-500/10 border-t border-amber-500/30 text-center">
                <span class="text-amber-400 text-sm">
                  ⏰ Ponuka platí do <strong>{formatDate(bundle.expiresAt)}</strong>
                </span>
              </div>
            )}
          </div>

          {/* Company Footer */}
          {organization && (
            <div class="mt-8 text-center text-sm text-slate-500">
              <div class="font-medium text-slate-400">{organization.name}</div>
              {organization.address && <div>{organization.address}</div>}
              <div class="flex flex-wrap justify-center gap-x-4 gap-y-1 mt-1">
                {organization.ico && <span>IČO: {organization.ico}</span>}
                {organization.email && <span>{organization.email}</span>}
                {organization.phone && <span>{organization.phone}</span>}
              </div>
            </div>
          )}
        </>
      )}
    </div>
  </main>
</Layout>
