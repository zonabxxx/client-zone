---
import Layout from '../layouts/Layout.astro';
import { getSessionFromCookie } from '../lib/session';

// Check authentication
const session = getSessionFromCookie(Astro.request.headers.get('cookie'));

if (!session) {
  return Astro.redirect('/');
}

// TODO: Load installations from database
const installations: Array<{ 
  id: string; 
  orderNumber: string;
  name: string;
  type: string;
  scheduledDate: string;
  scheduledTime: string;
  status: string;
  address: string;
  team: string;
}> = [];

const statusLabels: Record<string, string> = {
  scheduled: 'Naplánované',
  in_progress: 'Prebieha',
  completed: 'Dokončené',
  cancelled: 'Zrušené',
};

const typeLabels: Record<string, string> = {
  billboard: 'Billboard',
  'light-sign': 'Svetelná reklama',
  'vehicle-wrap': 'Polep vozidla',
  banner: 'Banner',
  other: 'Iné',
};

const stats = {
  total: installations.length,
  scheduled: installations.filter(i => i.status === 'scheduled').length,
  completed: installations.filter(i => i.status === 'completed').length,
};
---

<Layout title="Inštalácie" activeNav="installations">
  <main class="min-h-screen pb-24 md:pb-8">
    <!-- Header -->
    <header class="px-6 py-8 md:px-8">
      <div class="max-w-6xl mx-auto">
        <!-- Breadcrumb -->
        <div class="flex items-center gap-2 text-sm text-[#6b7280] mb-6">
          <a href="/dashboard" class="hover:text-[#f59e0b] transition-colors flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 18 9 12 15 6"/>
            </svg>
            Domov
          </a>
        </div>
        
        <!-- Title section -->
        <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-2">
              <span class="text-gradient-orange">Inštalačné</span> práce
            </h1>
            <p class="text-[#9ca3af]">
              Prehľad plánovaných a dokončených inštalácií
            </p>
          </div>
        </div>
        
        <!-- Orange divider -->
        <hr class="divider-orange mt-6" />
      </div>
    </header>
    
    <div class="max-w-6xl mx-auto px-6 md:px-8">
      <!-- Stats Grid -->
      <div class="grid grid-cols-3 gap-4 mb-8">
        <div class="adsun-card p-6 animate-fade-in-up">
          <div class="stats-number text-white mb-1">{stats.total}</div>
          <div class="text-[#6b7280] text-sm">Celkom</div>
        </div>
        <div class="adsun-card p-6 animate-fade-in-up stagger-1">
          <div class="stats-number stats-number-orange mb-1">{stats.scheduled}</div>
          <div class="text-[#6b7280] text-sm">Naplánované</div>
        </div>
        <div class="adsun-card p-6 animate-fade-in-up stagger-2">
          <div class="stats-number stats-number-green mb-1">{stats.completed}</div>
          <div class="text-[#6b7280] text-sm">Dokončené</div>
        </div>
      </div>

      <!-- Timeline view -->
      <div class="space-y-4">
        {installations.map((installation, index) => (
          <div 
            class="adsun-card p-6 animate-fade-in-up"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="flex flex-col md:flex-row md:items-center gap-4">
              <!-- Date column -->
              <div class="md:w-32 flex-shrink-0">
                <div class="text-center md:text-left">
                  <div class="text-2xl font-bold text-[#f59e0b]">
                    {new Date(installation.scheduledDate).getDate()}
                  </div>
                  <div class="text-sm text-[#9ca3af]">
                    {new Date(installation.scheduledDate).toLocaleDateString('sk-SK', { month: 'long', year: 'numeric' })}
                  </div>
                  <div class="text-sm font-medium text-white mt-1">
                    {installation.scheduledTime}
                  </div>
                </div>
              </div>
              
              <!-- Vertical divider -->
              <div class="hidden md:block w-px h-20 bg-gradient-to-b from-transparent via-[#f59e0b] to-transparent"></div>
              
              <!-- Content -->
              <div class="flex-1">
                <div class="flex flex-wrap items-center gap-2 mb-2">
                  <span class="font-mono text-sm text-[#f59e0b] font-medium">{installation.orderNumber}</span>
                  <span class:list={[
                    "px-2.5 py-1 rounded-md text-xs font-medium",
                    installation.status === 'completed' ? "status-completed" : "status-in-progress"
                  ]}>
                    {statusLabels[installation.status]}
                  </span>
                  <span class="px-2.5 py-1 rounded-md text-xs font-medium bg-[#1a1a1a] text-[#9ca3af]">
                    {typeLabels[installation.type]}
                  </span>
                </div>
                
                <h3 class="text-lg font-semibold text-white mb-2">{installation.name}</h3>
                
                <div class="flex flex-wrap gap-4 text-sm text-[#9ca3af]">
                  <span class="flex items-center gap-1.5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                      <circle cx="12" cy="10" r="3"/>
                    </svg>
                    {installation.address}
                  </span>
                  <span class="flex items-center gap-1.5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                      <circle cx="9" cy="7" r="4"/>
                      <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                      <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                    </svg>
                    {installation.team}
                  </span>
                </div>
              </div>
              
              <!-- Status icon -->
              <div class="flex-shrink-0">
                {installation.status === 'completed' ? (
                  <div class="w-12 h-12 rounded-full bg-[#22c55e]/20 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#22c55e" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                  </div>
                ) : (
                  <div class="w-12 h-12 rounded-full bg-[#f59e0b]/20 flex items-center justify-center animate-pulse-orange">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="12 6 12 12 16 14"/>
                    </svg>
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Empty state -->
      {installations.length === 0 && (
        <div class="adsun-card p-12 text-center animate-fade-in-up">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-[#1a1a1a] flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#6b7280" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
            </svg>
          </div>
          <h2 class="text-xl font-semibold text-white mb-2">Žiadne naplánované inštalácie</h2>
          <p class="text-[#6b7280]">Inštalácie sa tu zobrazia po potvrdení objednávky.</p>
        </div>
      )}
      
      <!-- Info section -->
      <div class="adsun-card p-8 mt-8 animate-fade-in-up">
        <div class="flex flex-col md:flex-row gap-6">
          <div class="flex-shrink-0">
            <div class="w-16 h-16 rounded-full bg-[#f59e0b]/20 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="16" x2="12" y2="12"/>
                <line x1="12" y1="8" x2="12.01" y2="8"/>
              </svg>
            </div>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-white mb-2">Informácie o inštaláciách</h3>
            <p class="text-[#9ca3af] mb-4">
              Náš tím vás bude kontaktovať pred každou inštaláciou pre potvrdenie termínu. 
              Po dokončení inštalácie dostanete foto dokumentáciu.
            </p>
            <div class="flex flex-wrap gap-3">
              <a href="tel:+421903222751" class="btn-adsun-secondary inline-flex items-center gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
                Kontaktovať
              </a>
              <a href="mailto:info@adsun.sk" class="btn-adsun-secondary inline-flex items-center gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
                Napísať email
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
